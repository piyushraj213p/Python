#MATHEMATICAL CALCULATION
print(567 + 4599) #addition
print(314 - 79) #subtraction
print(15 * 6) #multiplication
print(57 / 5) #division
print(59 // 19) #division result without decimal
print(4 ** 3) #sqare root
print(4 / 78 * 99 / 5 + 468 - 56 / 7 + 46 * 6)
#change code print(3 * 3 + 3 / 3 - 3) fir output 3 
print(3 * (3 + 3) / 3 - 3)

#NUMBER MANIPULATION
#BMI calculator
bmi = 89 / 1.89 ** 2
print(bmi)

#Flooring a number (lower rounf figure of decimal)
print(int(bmi))

#Rounding a number (exect round figure)
print(round(bmi))
print(round(bmi, 2)) #round upto 2 digit decimal point

#Assignment Operator
# user score
score = 49
score += 1
print(score)

score = 39
score -= 9
print(score)

score = 909
score *= 2
print(score)

score = 58
score /= 14
print(score)

#f-string
weight = 76
print("You are " + str(weight) + " kg.") #too complicated
print(f"You are {weight} kg.") #using f-string

score = 354
winning_percent = 76
winning_condition = True
print("Your score is " + str(score) + ". " + "Chance of wiining is " + str(winning_percent) + " percentage. " + "You are winning is " + str(True) + ".") #too complicated
print(f"Your score is {score}. Chance of winning is {winning_percent} percentage. You are winning is {True}.") #using f-string
