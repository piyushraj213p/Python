#subscripting
print("Hello"[0])
print(" hum nhi jayenge"[9])
print("hum jayenge hi toh"[-5])

#String
print("6789" + "546" + "dump")

#Integer will be whole number
print(345 + 66)

#large integer
print(56589_568_999)

#Float is floating point number or decimal number
print(57797.78)

#Boolean capital T or F
print(False)
print(True)

#len(657679745) are integer so it doesn't work we can use string in place of it i.e.
len("Hum hai khalnayak")
len("6587978")
len("6767fgf6776f7898")

#to identify which type of data we use print(type())
print(type(" hum hai khalnayak"))
print(type(4667687))
print(type(43557.767))
print(type(689_467.577))
print(type(788_578_899))
print(type("457858"))
print(type(False))
print(type("False"))

